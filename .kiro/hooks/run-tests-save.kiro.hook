{
  "enabled": true,
  "name": "Run Tests on Save",
  "description": "Automatically run tests when TypeScript files are saved",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*.ts"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A TypeScript file has been saved. Please run the test suite using the command: npm test -- --passWithNoTests --silent"
  }
}